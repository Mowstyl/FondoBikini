<Window x:Class="FondoBikini.BookSpaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hotel Fondo de Bikini" Height="350" Width="450" ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="bikiniTitleFontStyle" TargetType="Control">
            <Setter Property="FontFamily" Value="MV Boli"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style x:Key="bikiniFontStyle" TargetType="Control">
            <Setter Property="FontFamily" Value="MV Boli"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid>
        <ComboBox Name="servicio" HorizontalAlignment="Left" Margin="80,21,0,0" VerticalAlignment="Top" Width="120" Style="{StaticResource bikiniFontStyle}"/>
        <Label Content="Servicio" HorizontalAlignment="Left" Margin="23,21,0,0" VerticalAlignment="Top" Style="{StaticResource bikiniFontStyle}"/>
        <DatePicker Name="fecha" HorizontalAlignment="Left" Margin="276,21,0,0" VerticalAlignment="Top" Style="{StaticResource bikiniFontStyle}"/>
        <Label Content="Fecha" HorizontalAlignment="Left" Margin="230,21,0,0" VerticalAlignment="Top" Style="{StaticResource bikiniFontStyle}"/>
        <GroupBox Name="horas" Header="Horarios" Height="240" HorizontalAlignment="Left" Margin="23,62,0,0" VerticalAlignment="Top" Width="170" Style="{StaticResource bikiniFontStyle}">
            <StackPanel Name="stackPanel1" Margin="0,0,0,0">
                <RadioButton Content="8:00" Name="h8" Height="16" Margin="10,5,0,0" Width="60" HorizontalAlignment="Left"/>
                <RadioButton Content="8:30" Name="h830" Margin="90,-18,0,0" Width="60" Height="16" HorizontalAlignment="Left" />
                <RadioButton Content="9:00" Name="h9" Margin="10,5,0,0" Width="60" Height="16" HorizontalAlignment="Left"/>
                <RadioButton Content="9:30" Name="h930" Margin="90,-18,0,0" Width="60" Height="16" HorizontalAlignment="Left"/>
                <RadioButton Content="10:00" Name="h10" Height="16" Margin="10,5,0,0" Width="60" HorizontalAlignment="Left"/>
                <RadioButton Content="10:30" Name="h1030" Margin="90,-18,0,0" Width="60" Height="16" HorizontalAlignment="Left" />
                <RadioButton Content="11:00" Name="h11" Margin="10,5,0,0" Width="60" Height="16" HorizontalAlignment="Left"/>
                <RadioButton Content="11:30" Name="h1130" Margin="90,-18,0,0" Width="60" Height="16" HorizontalAlignment="Left"/>
                <RadioButton Content="12:00" Name="h12" Height="16" Margin="10,5,0,0" Width="60" HorizontalAlignment="Left"/>
                <RadioButton Content="12:30" Name="h1230" Margin="90,-18,0,0" Width="60" Height="16" HorizontalAlignment="Left" />
                <RadioButton Content="13:00" Name="h13" Margin="10,5,0,0" Width="60" Height="16" HorizontalAlignment="Left"/>
                <RadioButton Content="13:30" Name="h1330" Margin="90,-18,0,0" Width="60" Height="16" HorizontalAlignment="Left"/>
                <RadioButton Content="14:00" Name="h14" Margin="10,5,0,0" Width="60" Height="16" HorizontalAlignment="Left"/>
                <RadioButton Content="16:30" Name="h1630" Margin="90,-18,0,0" Width="60" Height="16" HorizontalAlignment="Left"/>
                <RadioButton Content="17:00" Name="h17" Margin="10,5,0,0" Width="60" Height="16" HorizontalAlignment="Left"/>
                <RadioButton Content="17:30" Name="h1730" Margin="90,-18,0,0" Width="60" Height="16" HorizontalAlignment="Left"/>
                <RadioButton Content="18:00" Name="h18" Margin="10,5,0,0" Width="60" Height="16" HorizontalAlignment="Left"/>
                <RadioButton Content="18:30" Name="h1830" Margin="90,-18,0,0" Width="60" Height="16" HorizontalAlignment="Left"/>
                <RadioButton Content="19:00" Name="h19" Margin="10,5,0,0" Width="60" Height="16" HorizontalAlignment="Left"/>
                <RadioButton Content="19:30" Name="h1930" Margin="90,-18,0,0" Width="60" Height="16" HorizontalAlignment="Left"/>

            </StackPanel>
        </GroupBox>
        <Label Content="Datos de Reserva" HorizontalAlignment="Left" Margin="208,76,0,0" VerticalAlignment="Top" Style="{StaticResource bikiniTitleFontStyle}"/>
        <Label Content="Nombre" HorizontalAlignment="Left" Margin="208,112,0,0" VerticalAlignment="Top" Style="{StaticResource bikiniFontStyle}"/>
        <Label Content="Apellidos" HorizontalAlignment="Left" Margin="208,141,0,0" VerticalAlignment="Top" Style="{StaticResource bikiniFontStyle}"/>
        <Label Content="DNI" HorizontalAlignment="Left" Margin="208,170,0,0" VerticalAlignment="Top" Style="{StaticResource bikiniFontStyle}"/>
        <TextBox Name="nombre" HorizontalAlignment="Left" Height="23" Margin="276,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145" Style="{StaticResource bikiniFontStyle}"/>
        <TextBox Name="apellidos" HorizontalAlignment="Left" Height="23" Margin="276,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145" Style="{StaticResource bikiniFontStyle}"/>
        <TextBox Name="dni" HorizontalAlignment="Left" Height="23" Margin="276,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145" Style="{StaticResource bikiniFontStyle}"/>
        <Button Name="nueva_Reserva" Content="Nueva Reserva" HorizontalAlignment="Left" Margin="208,262,0,0" VerticalAlignment="Top" Width="99" Style="{StaticResource bikiniFontStyle}"/>
        <Button Name="anular_Reserva" Content="Anular Reserva" HorizontalAlignment="Left" Margin="323,262,0,0" VerticalAlignment="Top" Width="98" Style="{StaticResource bikiniFontStyle}"/>


    </Grid>
</Window>
