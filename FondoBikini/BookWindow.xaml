<Window x:Class="FondoBikini.BookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fondo de Bikini" Height="540" Width="525">
    <Grid Margin="0,0,2,-3">
        <Label Content="Nombre" HorizontalAlignment="Left" Margin="21,42,0,0" VerticalAlignment="Top"/>
        <TextBox Name="textNombre" HorizontalAlignment="Left" Height="23" Margin="80,45,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Apellidos" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="21,99,0,0"/>
        <TextBox Name="textApellidos" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Margin="80,102,0,0"/>
        <Label Content="DNI" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="309,47,0,0" Width="45"/>
        <TextBox Name="textDni" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Margin="342,42,0,0"/>
        <Label Content="Población" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="278,84,0,0"/>
        <TextBox Name="textPoblación"    HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Margin="342,87,0,0"/>
        <Label Content="Provincia" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="282,141,0,0"/>
        <TextBox Name="textProvincia" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Margin="345,144,0,0"/>
        <Label Content="Tipo de habitación" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,162,0,0"/>
        <ComboBox Name="tipoHabitacion" HorizontalAlignment="Left" Margin="136,162,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Noches de estancia" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="2.049,12.749" Margin="0,225,0,0"/>
        <TextBox Name="textNochesEstancia" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Margin="136,225,0,0"/>
        <Label Content="Número de tarjeta de crédito" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,288,0,0"/>
        <TextBox Name="textNumeroTarjeta" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Margin="169,291,0,0"/>
        <Button Name="textAnular" Content="Anular reserva" HorizontalAlignment="Right" VerticalAlignment="Top" Width="95" Margin="0,430,45,0" Height="33" Click="textAnular_Click"/>
        <Button Name="textCrear" Content="Crear reserva" HorizontalAlignment="Left" VerticalAlignment="Top" Width="101" Margin="45,429,0,0" Height="34" Click="textCrear_Click"/>
        <Button Name="textModificar" Content="Modificar reserva" HorizontalAlignment="Center" Margin="0,429,0,0" VerticalAlignment="Top" Width="108" Height="34" Click="textModificar_Click"/>

    </Grid>
</Window>

