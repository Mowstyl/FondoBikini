<Window x:Class="FondoBikini.StockSpaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hotel Fondo de Bikini" Height="270" Width="300">
    <Grid>
        <Label Content="Articulo" HorizontalAlignment="Left" Margin="43,27,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="articulo" HorizontalAlignment="Left" Margin="112,29,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Stock Actual" HorizontalAlignment="Left" Margin="24,76,0,0" VerticalAlignment="Top"/>
        <TextBox Name="stock" HorizontalAlignment="Left" Height="23" Margin="112,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Incrementar Stock" HorizontalAlignment="Left" Margin="24,118,0,0" VerticalAlignment="Top"/>
        <Label Content="Reducir Stock" HorizontalAlignment="Left" Margin="24,144,0,0" VerticalAlignment="Top"/>
        <TextBox Name="incrementarStock" HorizontalAlignment="Left" Height="23" Margin="135,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="97"/>
        <TextBox Name="reducirStock" HorizontalAlignment="Left" Height="23" Margin="135,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="97"/>
        <Button Name="actualizar" Content="Actualizar" HorizontalAlignment="Left" Margin="99,188,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
